#ifndef COST_FUNCTOR_H__
#define COST_FUNCTOR_H__

class CostFunctor
{
  virtual double operator()(const int node_index, const int label) = 0;
  virtual double operator()(const int node_index_1, const int node_index_2, const int label_1, const int label_2) = 0;
  virtual double getLabelCost() { return 0; };
  virtual double getLabelIndicatorConstraintCost() { return 0; };
}

#endif
